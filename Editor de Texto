def pegar_mensagem(mensagem):
    while True:
        mensagem_selecionada = input("A partir de qual texto deseja modificar? ")

        ## Verificar se a mensagem que o usuário deseja modificar está dentro do texto
        if mensagem_selecionada in mensagem:
        ## Se estiver, transformar em lista para verificar índice depois
            lista_palavras = mensagem.split()
            ## Verificar índice
            indice = lista_palavras.index(mensagem_selecionada)

            return mensagem_selecionada, lista_palavras, indice

        else:
            ## Loop
            print("Texto não encontrado.")


print("---Editor de Texto---")

texto = input("Escreva....\n")
menu = int(input("O que deseja fazer (selecione o número correspondente)?\n[1] Acrescentar texto.\n[2] Remover texto.\n[3] Contar palavras.\n[4] Substituir texto\n\n"))

# Acrescentar texto
if menu == 1:
    ## Criar lista para armazenar texto modificado
    nova_lista_texto = [] 
    texto_escolhido, lista_texto, i = pegar_mensagem(texto)
    texto_adicionado = input("Insira aqui o que deseja adicionar: ")

    ## Percorrer cada palavra dentro da lista de palavras
    for palavra in lista_texto:
        ## Adiciona texto original na nova lista
        nova_lista_texto.append(palavra)
        ## Enquanto adiciona cada palavra, verifica se é igual à palavra que quer modificar
        if palavra == texto_escolhido:
            ## Caso seja, acrescenta texto
            nova_lista_texto.append(texto_adicionado)

    print(nova_lista_texto)

# Remover texto


# Contar texto
if menu == 3:
    palavra_para_contar = input("Insira qual palavra deseja contar: ")
    contador = texto.count(palavra_para_contar)
    print(contador)

# Substituir texto
if menu == 4:
    texto_antigo = input("Insira o texto a ser alterado: ")
    novo_texto = input("Por qual mensagem deseja substituir? ")
    print(" ")
    texto = texto.replace(texto_antigo, novo_texto)
    print(texto)
